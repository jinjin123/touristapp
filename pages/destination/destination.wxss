  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.types .typeItem image{
  width: 80rpx;
  height: 80rpx;
}
.types .typeItem text{
  font-size: 26rpx;
  color: #5d5d5d;
}
