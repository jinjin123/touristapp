/* pages/destination/destination.wxss */
.header{
  width: 100%;
  height: 360rpx;
  /* margin-top: -200rpx; */
}
.header .swiperItem{
  position: relative;
}
.header .swiperItem image{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.header .swiperItem .placeInfo{
  position: absolute;
  width: 100%;
  height: 100%;
  top: -80rpx;
  left: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  color: white;
}
.header .swiperItem .placeInfo .left{
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.header .swiperItem .placeInfo .left .name{
  font-size: 34rpx;
  margin-bottom: 180rpx;
}
.header .searchBar{
  width: 55%;
  height: 70rpx;
  padding-left: 120rpx;
  border-radius: 80rpx;
  margin: auto;
  position: absolute;
  top: 50%;
  left: 130rpx;
  margin-top: -55rpx;
  border: 1rpx  #b5b3b2 solid;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
}
.header .searchBar text{
  font-size: 26rpx;
  margin-left: 10rpx;
  color: #b5b3b2;
}
.header .swiperItem .placeInfo .left .weather{
  background-color: rgba(0, 0, 0, 0.4);
  padding: 10rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  left: 520rpx;
  margin-top: 40rpx;
  position: absolute;
}
.header .normalItem image{
  width: 100%;
  height: 100%;
}
