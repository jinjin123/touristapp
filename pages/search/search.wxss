.weui-search-bar {
  position:relative;
  padding:6px 10px;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  box-sizing:border-box;
  background-color:#EFEFF4;
  border-top:0 solid #D7D6DC;
  border-bottom:0 solid #D7D6DC;
  border-radius:4px;
}
button {
  height:33px;
  /* color:#a1a1a1; */
  text-align:center;
  font-size:15px;
  background-color: white;
  width:60px;
  top:15px;
}
button::after {
  border:none
}

.search-log{
  border:1px solid #eee !important;
